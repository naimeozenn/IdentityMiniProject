@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>Roller</td>
        <td>İşlem</td>
    </tr>

    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <rolgoster user-id="@item.Id"></rolgoster>
                </td>
                <td>
                    <a asp-action="AssingRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                    <a asp-action="AddClaim" asp-route-id="@item.Id" asp-controller="Female" class="btn btn-info btn-sm">Kadın Claim Ekle</a>
                </td>
            </tr>

        }
    }
    else
    {
        <tr>
            <td>Sisteminizde kayıtlı rol bulunmuyor</td>
        </tr>
    }


</table>